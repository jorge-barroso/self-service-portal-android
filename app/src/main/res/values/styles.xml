<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="buttonStyle">@style/Buttons</item>
        <item name="cardViewStyle">@style/CardViews</item>
        <item name="android:textViewStyle">@style/TextViews</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NoDrawerTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="buttonStyle">@style/Buttons</item>
        <item name="cardViewStyle">@style/CardViews</item>
        <item name="android:textViewStyle">@style/TextViews</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FullScreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="buttonStyle">@style/Buttons</item>
        <item name="cardViewStyle">@style/CardViews</item>
        <item name="android:textViewStyle">@style/TextViews</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Buttons" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViews" parent="CardView">
        <item name="android:elevation">1dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:innerRadius">0dp</item>
        <item name="android:shape">ring</item>
        <item name="android:thicknessRatio">1.9</item>
        <item name="android:background">@color/premfina_gray</item>
    </style>

    <style name="TextViews" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:background">@null</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViews.Head">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="Views">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ButtonBarStyle" parent="@android:style/ButtonBar">
        <item name="buttonStyle">@style/Buttons</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
