<resources>

    <style name="NoActionBar.LightColors" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fontGray</item>
        <item name="primaryTextColor">@color/fontGray</item>
        <item name="middleColor"></item>
        <!--item name="secondaryTextColor"></item-->
        <item name="backgroundCardColor">@color/premfina_gray</item>
        <item name="primaryColor">@color/colorPrimary</item>
        <item name="secondaryColor">@color/colorPrimaryDark</item>
    </style>
    <style name="NoActionBar.DarkColors" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:textColor">@color/fontLightGray</item>
        <item name="primaryTextColor">@android:color/white</item>
        <item name="middleColor">@color/fontGray</item>
        <!--item name="secondaryTextColor"></item-->
        <item name="backgroundCardColor">@android:color/widget_edittext_dark</item>
        <item name="primaryColor">@color/colorPrimaryDark</item>
        <item name="secondaryColor">@color/colorSecondaryDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="NoActionBar.LightColors.AppTheme">
        <item name="actionBarSize">45dp</item>
        <item name="displayOptions">homeAsUp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="buttonStyle">@style/Buttons</item>
        <item name="cardViewStyle">@style/CardViews</item>
        <item name="android:textViewStyle">@style/TextViews</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="NoActionBar.DarkColors.AppTheme">
        <item name="actionBarSize">45dp</item>
        <item name="displayOptions">homeAsUp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="buttonStyle">@style/Buttons</item>
        <item name="cardViewStyle">@style/CardViews</item>
        <item name="android:textViewStyle">@style/TextViews</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AboutLight" parent="NoActionBar.LightColors">
        <item name="actionBarSize">45dp</item>
        <item name="android:textViewStyle">@style/AboutTextViews</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
    </style>

    <style name="Buttons" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/primaryColor</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViews" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:innerRadius">0dp</item>
        <item name="android:shape">ring</item>
        <item name="android:thicknessRatio">1.9</item>
        <item name="android:background">@color/premfina_gray</item>
    </style>

    <style name="TextViews" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AboutTextViews" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextViews.Head">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="Views">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ButtonBarStyle" parent="@android:style/ButtonBar">
        <item name="buttonStyle">@style/Buttons</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
